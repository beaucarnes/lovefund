<p id="notice"><%= notice %></p>

<h1><%= (params[:met] == 'true'?'Met Needs and Prayer Requests':'Current Posts') %></h1>

<%= link_to "Request Prayer",
  posts_url(:category => (@rp ? params[:category].length > 1 ? params[:category].gsub("0", "") : params[:category] : params[:category]+'0')), 
  class: @rp ? "btn btn-success" : "btn btn-default" %>
<%= link_to "Request Help",
  posts_url(:category => (@rh ? params[:category].length > 1 ? params[:category].gsub("1", "") : params[:category] : params[:category]+'1')), 
  class: @rh ? "btn btn-success" : "btn btn-default" %>
<%= link_to "Offer Prayer",
  posts_url(:category => (@op ? params[:category].length > 1 ? params[:category].gsub("2", "") : params[:category] : params[:category]+'2')), 
  class: @op ? "btn btn-success" : "btn btn-default" %>
<%= link_to "Offer Help",
  posts_url(:category => (@oh ? params[:category].length > 1 ? params[:category].gsub("3", "") : params[:category] : params[:category]+'3')), 
  class: @oh ? "btn btn-success" : "btn btn-default" %>
  
<%= form_tag(posts_url(:category => params[:category]), :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>

<div class="text-center padding-bottom">
  
<%= will_paginate %>

  <% @posts.each do |post| %>
  
<a href="/posts/<%= post.id %>" class="post">
<div class="panel panel-<%= post.get_class %>">
  <div class="panel-heading">
    <h3 class="panel-title"><stong><%= post.category.humanize.upcase %>:</strong> <%= post.title %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
    <% if post.picture.length > 0 %>
      <div class="col-md-2"><%= image_for(post, "img-responsive thumbnail") %></div>
    <% end %>
      <div class="col-md-10">
        <%= truncate(post.description, length: 150, separator: ' ') %>
      </div>
    </div> 
  </div>
</div>
</a>


  <% end %>

<%= will_paginate %>

<br>


