<% provide(:title, "View Post") %>

<article id="post" class="post">


<div class="row">
<% if logged_in? && current_post?(@post) %>
  <div class="col-md-12 text-center padding-bottom"> 
    <% if @post.category == "request_prayer" || @post.category == "request_help" %>
        <%= link_to "Need Met!", edit_post_path(@post, :met => true), class: "btn btn-success" %>
    <% end %>
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %>
        <%= link_to "Delete", @post, 
                    class: "btn btn-danger", 
                    method: :delete, data: { confirm: 'Are you sure?' } %>
    
  </div>
<% end %>
</div>
<div class="row">
  <div class="col-md-12">    
    <%= image_for(@post, "img-responsive center-block thumbnail") %>
    <h1><%= @post.title %></h1>
    <h2>posted by <%= @post.name %></h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">  
<% if (@post.status == "met") %>    
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4 class="text-center"> Need or Prayer Met! </h4>
    </div>
    <div class="panel-body">
      <%= @post.description_met %>
    </div>
  </div>
<% end %>
  </div>
</div>

<div class="row padding-bottom">
  <div class="col-md-offset-1 col-md-2 text-center"><strong>Description</strong></div>
  <div class="col-md-8"><%= @post.description %></div>
</div>

<% if @post.street_address.length > 1 %>
<div class="row padding-bottom">
  <div class="col-md-offset-1 col-md-2 text-center"><strong>Address</strong></div>
  <div class="col-md-8"><%= @post.street_address %></div>
</div>
<% end %>

<div class="row padding-bottom">
  <div class="col-md-offset-1 col-md-2 text-center"><strong>E-mail</strong></div>
  <div class="col-md-8"><%= (@post.anon_email || @post.facilitated_by_church)?"info@thechurchindrive.com (church e-mail)":@post.email %></div>
</div>
<div class="row padding-bottom">
  <div class="col-md-offset-1 col-md-2 text-center"><strong>Phone</strong></div>
  <div class="col-md-8"><%= (!@post.show_phone || @post.facilitated_by_church)?"989-220-2017 (church phone)":@post.phone  %></div>
</div>

<div class="row">
  <div class="col-md-12 text-center"> 
  <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
  </div>
</div>

</article>

