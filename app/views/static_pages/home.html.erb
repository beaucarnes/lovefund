<div class="row">
  <div class="col-sm-6">
    <div class="card card-success">
      <div class="card-block">
        <h3 class="card-title">Requesting Prayer</h3>
      </div>
      <ul class="list-group list-group-flush">
        <% @posts_rp.each do |post| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-2">
                <%= image_for(post, "img-responsive thumbnail") %>
              </div>
              <div class="col-sm-10">
                <h5><%= post.title %></h5>
                <p><%= truncate(post.description, length: 50, separator: ' ') %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
